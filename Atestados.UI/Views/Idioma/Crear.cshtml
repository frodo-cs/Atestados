<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $('#subirArchivo').submit(function (e) {
        e.preventDefault();
        var data = new FormData(this);
        $('#archivo').val('');
        $.ajax({
            url: '/Atestados/Idioma/Cargar',
            data: data,
            cache: false,
            contentType: false,
            processData: false,
            type: 'POST',
            success: function (data) {
                var archivo = JSON.parse(data.archivoJson)
                if (data != null) {
                    $("#tablaArchivos").append('<tr><td>' + archivo.Nombre + '</td><td>' + archivo.TipoArchivo + "</td><td hidden='true'>" + archivo.Datos + '</td></tr>')
                }
            }
        })

    })

</script>
